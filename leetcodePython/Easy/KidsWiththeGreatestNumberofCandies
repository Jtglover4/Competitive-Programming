class Solution(object):
    def kidsWithCandies(self, candies, extraCandies):
        """
        :type candies: List[int]
        :type extraCandies: int
        :rtype: List[bool]
        """
    
        m = max(candies)

        result = []

        for i in candies:
            if(i + extraCandies >= m):
                result.append(1)
            else:
                result.append(0)
        
        return result;



    
        
